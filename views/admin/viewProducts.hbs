<section>
    <div class="container">

        <div class="row mt-5">
            
            <table class="table mt-3" id="myTable">
                <thead>
                    <tr>
                        <th scope="col">No</th>
                        <th scope="col">Name</th>
                        <th scope="col">category</th>
                        <th scope="col">Description</th>
                        <th scope="col">Image</th>
                        <th scope="col">Options</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each products}}

                    <tr>


                        <th scope="row">1</th>
                        <td>{{this.name}}</td>
                        <td>{{this.category}}</td>
                        <td>{{this.description}}</td>
                        <td><img style="width: 50px;height:50px" src='/product-images/{{this._id}}.jpg' alt=""></td>
                        <td>
                            <a href="/admin/editProduct/{{this._id}}" class="btn btn-info ">Edit</a>
                            <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger"
                                onclick="return confirm('Aru you sure to delete{{this.name}}?')">Delete</a>
                        </td>

                    </tr>

                    {{/each}}

                </tbody>
            </table>

            <div class= "text-center mt-5">
                <a href="/admin/addProduct" class="btn btn-success ms-auto mb-5 w-25">Add Products</a>

            </div>
        </div>
    </div>
</section>

<script>
    $(document).ready( function () {
    $('#myTable').DataTable();
} );
</script>