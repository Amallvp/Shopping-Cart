<section>
    <div class="container">

        <div class="row mt-5">
            <div>
                <a href="/admin/addProduct" class="btn btn-success ms-auto">Add Products</a>

            </div>

            <table class="table mt-5">
                <thead>
                    <tr>
                        <th scope="col">No</th>
                        <th scope="col">Name</th>
                        <th scope="col">category</th>
                        <th scope="col">Description</th>

                        <th scope="col">image</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each products}}

                    <tr>
    

                        <th scope="row">1</th>
                        <td>{{this.name}}</td>
                        <td>{{this.category}}</td>
                        <td>{{this.description}}</td>
                        <td><img style="width: 50px;height:50px" src='/product-images/{{this._id}}.jpg' alt=""></td>
                        <td>
                            <a href="/admin/editProduct/{{this._id}}" class="btn btn-info ">Edit</a>
                            <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger"
                                onclick="return confirm('Aru you sure to delete{{this.name}}?')">Delete</a>
                        </td>

                    </tr>

                    {{/each}}

                </tbody>
            </table>
        </div>
    </div>
</section>