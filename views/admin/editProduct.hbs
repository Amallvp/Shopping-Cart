<div class="container">

    <div class="row mt-5">

        <div class="col-md-4">

            <h2 class="mb-5">Edit product</h2>

            <form action="/admin/editProduct/{{product._id}}" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="exampleFormControlInput1" class="form-label">Name</label>
                    <input type="text" class="form-control" name="name" value="{{product.name}}" placeholder="">

                    <label for="exampleFormControlInput1" class="form-label">Category</label>
                    <input type="text" class="form-control" name="category" value="{{product.category}}" placeholder="">

                    <label for="exampleFormControlInput1" class="form-label">Description</label>
                    <input type="text" class="form-control" value="{{product.description}}" name="description"
                        placeholder="">

                        <label for="exampleFormControlInput1" class="form-label">Price</label>
                    <input type="text" class="form-control" value="{{product.description}}" name="price"
                        placeholder="">

                    <label for="">Image</label>
                    <input class="form-control" name="image" type="file" id="" onchange="viewImage(event)">
                    <img src="/product-images/{{product._id}}.jpg" alt="" style="width: 100px;height:auto" id="imgView">

                    <div class="text-center mt-4"><button class="btn btn-success">Submit</button></div>
                </div>
            </form>


        </div>
    </div>
</div>
<script>
    function viewImage(event) {
        document.getElementById('imgView').src = URL.createObjectURL(event.target.files[0])

    }
</script>