<section>

  <div class="container mt-5">
    <div class="row">

      {{#each products}}

      <div class="col-md-3 p-3">
        <div class="card" style="width: 10rem;">
          <img style="width: 9.9rem;height:7rem" src='/product-images/{{product._id}}.jpg' class="card-img-top"
            alt="...">
          <div class="card-body">
            <h5 class="card-title">{{product.name}}</h5>
            <p class="card-text"> {{product.descriptions}}</p>
            <p class="card-text"> {{product.prices}}</p>

          </div>
        </div>

      </div>

      {{/each}}

    </div>
  </div>

</section>