<section>

  <div class="container mt-5">
    <div class="row">

      {{#each products}}

      <div class="col-md-3 p-3">
        <div class="card" style="width: 16rem;">
          <img style="width: 15.9rem;height:14rem" src='/product-images/{{this._id}}.jpg' class="card-img-top"
            alt="...">
          <div class="card-body">
            <h5 class="card-title">{{this.name}}</h5>
            <p class="card-text"> {{this.description}}</p>
            <p class="card-text"> {{this.price}}</p>
            <button onclick="addToCart('{{this._id}}')" class="btn btn-primary">Add to cart </button>
          </div>
        </div>

      </div>

      {{/each}}

    </div>
  </div>

</section>

<script>
  // Ensure the DOM is fully loaded before running the script
  $(document).ready(function () {
    // Define the addToCart function in the global scope
    window.addToCart = function (proId) {
      $.ajax({
        url: '/add-to-cart/' + proId,
        method: 'get',
        success: (response) => {
          if (response.status) {
            let count = $('#cart-count').html()
            count = parseInt(count) + 1
            $('#cart-count').html(count)

          }

        },

      });
    };
  });
</script>